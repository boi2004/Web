@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome Back!</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Arial', sans-serif;
            overflow: hidden;
        }

        .fullscreen-container {
            position: relative;
            height: 100vh;
            background: url('https://th.bing.com/th/id/R.dd950a5f1bccc7c8afdac669ec0c6358?rik=JhCtbAD2sy8tIw&pid=ImgRaw') center/cover;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            transition: background 0.5s ease-in-out;
        }

        .content {
            z-index: 1;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 0;
        }

        .header {
            font-size: 36px;
            margin-bottom: 20px;
        }

        .button {
            display: inline-block;
            padding: 15px 30px;
            font-size: 18px;
            text-decoration: none;
            color: #fff;
            background-color: #e74c3c;
            border-radius: 5px;
            transition: background 0.3s ease;
            cursor: pointer;
        }

            .button:hover {
                background-color: #c0392b;
            }
    </style>
</head>
<body>
    <div class="fullscreen-container">
        <div class="overlay"></div>
        <div class="content">
            <h1 class="header">Xin chào bạn đã quay lại!</h1>
            <p>Cảm ơn bạn đã quay lại. Hãy bắt đầu một hành trình mới!</p>
            <button class="button" onclick="askDestination()">Bắt đầu</button>
        </div>
    </div>

    <script>
        function askDestination() {
            var destination = prompt("Bạn muốn đi đâu?");
            if (destination) {
                alert("Chúc bạn có một chuyến đi tuyệt vời đến " + destination + "!");
            }
        }
    </script>
</body>
</html>
