            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.JewelryType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.JewelryType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Collection)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Collection)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.GoldCarat)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GoldCarat)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.GemType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GemType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Gender)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Gender)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MaterialColor)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaterialColor)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ImagePro)
            </dt>

            <dd>
                <img src="@Url.Content(Model.ImagePro)" height="150" width="150" />
