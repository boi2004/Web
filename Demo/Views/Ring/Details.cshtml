@model Demo.Models.Ring
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .back-link {
        margin-top: 20px;
        text-align: center;
    }

    .action-links {
        text-align: center;
        margin-top: 20px;
    }

        .action-links a {
            margin-right: 20px;
        }
</style>

<div class="container">


    <div>
        <h4>Thông Tin Sản Phẩm</h4>
        <hr />
