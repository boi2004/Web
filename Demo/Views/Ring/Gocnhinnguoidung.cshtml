@model IEnumerable<Demo.Models.Ring>

@{
    ViewBag.Title = "Gocnhinnguoidung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Sản Phẩm</h2>

<script>
    document.getElementById("filter-form").addEventListener("submit", function (e) {
        e.preventDefault();

        var selectedCategory = document.getElementById("category").value;
        var selectedGender = document.getElementById("gender").value;
        var selectedPriceRange = document.getElementById("priceRange").value;

        var form = e.target;
        var filterUrl = form.getAttribute("data-url");

        if (selectedCategory && selectedCategory !== "") {
            filterUrl += "?category=" + encodeURIComponent(selectedCategory);
        }
        if (selectedGender !== "all" && selectedGender !== "") {
            filterUrl += (filterUrl.includes("?") ? "&" : "?");
            filterUrl += "gender=" + encodeURIComponent(selectedGender);
        }
        if (selectedPriceRange && selectedPriceRange !== "") {
            filterUrl += (filterUrl.includes("?") ? "&" : "?");
            filterUrl += "priceRange=" + encodeURIComponent(selectedPriceRange);
        }
        window.location.href = filterUrl;
    });
</script>


<section>
    <div class="p-3">
        <div class="row w-100">
            @foreach (var item in Model)
            {
                <div class="col-md-12 col-lg-4 mb-4 mb-lg-0" style="height: 20%; width: 25%">
                    <div class="card text-black">
                        <img src="@Url.Content(item.ImagePro)"
                             class="card-img-top" alt="iPhone" />
                        <div class="card-body">
                            <div class="text-center mt-1">
                                <h4 class="card-title">@Html.DisplayFor(modelItem => item.Brand)</h4>
                                <h6 class="text-primary mb-1 pb-3">@Html.DisplayFor(modelItem => item.Price)</h6>
                            </div>
                            <div class="d-flex flex-row">
                                <a href="/ShoppingCart/AddToCart/@item.RingID" class="btn btn-primary flex-fill me-1">Mua</a>
                                <a href="/Ring/Details?id=@item.RingID" class="btn btn-danger">Chi tiết</a>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    /* Thiết kế gói bên ngoài danh sách sản phẩm */
    .product-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }
    /* Thiết kế mỗi mục sản phẩm */
    .product-item {
        width: calc(25% - 10px); /* 25% để hiển thị 4 sản phẩm trên hàng */
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ddd;
        margin: 0px 5px 20px;
    }

    /* Thiết kế thông tin sản phẩm */
    .product-detail {
        margin-bottom: 10px;
    }

    .product-label {
        font-weight: bold;
    }
    /* Thiết kế nút mua và liên kết chi tiết */
    .product-actions a {
        display: inline-block;
        margin-top: 12px;
        padding: 5px 10px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        text-align: center;
        border-radius: 5px;
    }

    .product-actions a:hover {
            background-color: #0056b3;
    }  

    .btn-btn-fefault {
        margin-top: 12px;
        margin-right: 50px;
    }
</style>
