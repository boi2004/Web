@model IEnumerable<Demo.Models.Ring>

@{
    ViewBag.Title = "Gocnhinnguoidung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gocnhinnguoidung</h2>
@using (Html.BeginForm("Gocnhinnguoidung", "Ring", FormMethod.Get, new { id = "filter-form", data_url = Url.Action("Gocnhinnguoidung", "Ring") }))
{
    <div class="filter-buttons">
        <label for="category">Loại:</label>
        <select name="category" id="category">
            <option value="">Tất cả</option>
            <option value="1">Nhẫn</option>
            <option value="2">Trang sức</option>
        </select>

        <label for="gender">Giới tính:</label>
        <select name="gender" id="gender">
            <option value="all">Tất cả</option>
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
        </select>

        <label for="priceRange">Giá:</label>
        <select name="priceRange" id="priceRange">
            <option value="">Tất cả</option>
            <option value="0-100000000">Giá dưới 100 Triệu</option>
            <option value="100000000-800000000">Giá 100 Triệu - 200 Triệu</option>
            <option value="200000000-100000000000000000000000000000000">Giá 200 triệu trở lên</option>
        </select>

        <input type="submit" value="Lọc">
    </div>
}

<script>
    document.getElementById("filter-form").addEventListener("submit", function (e) {
        e.preventDefault();

        var selectedCategory = document.getElementById("category").value;
        var selectedGender = document.getElementById("gender").value;
        var selectedPriceRange = document.getElementById("priceRange").value;

        var form = e.target;
        var filterUrl = form.getAttribute("data_url");

        if (selectedCategory && selectedCategory !== "") {
            filterUrl += "?category=" + encodeURIComponent(selectedCategory);
        }
        if (selectedGender !== "all" && selectedGender !== "") {
            filterUrl += (filterUrl.includes("?") ? "&" : "?");
            filterUrl += "gender=" + encodeURIComponent(selectedGender);
        }
        if (selectedPriceRange && selectedPriceRange !== "") {
            filterUrl += (filterUrl.includes("?") ? "&" : "?");
            filterUrl += "priceRange=" + encodeURIComponent(selectedPriceRange);
        }

        window.location.href = filterUrl;
    });
</script>




<div class="product-list">
    @foreach (var item in Model)
    {
        <div class="product-item">
            <div id="concubee">
                <div class="product-detail">
                    <div class="product-detail">
                        <div class="product-label">Hình ảnh:</div>
                        <div class="product-value">@Html.DisplayFor(modelItem => item.ImagePro)</div>
                    </div>
                    <div class="product-label">Thương hiệu:</div>
                    <div class="product-value">@Html.DisplayFor(modelItem => item.Brand)</div>
                </div>
                <div class="product-detail">
                    <div class="product-label">Màu chất liệu:</div>
                    <div class="product-value">@Html.DisplayFor(modelItem => item.MaterialColor)</div>
                </div>
            </div>
            <div class="product-actions">
                <a href="/ShoppingCart/AddToCart/@item.RingID" class="btn btn-default">Mua</a>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.RingID }, new { @class = "your-css-class" })
            </div>
        </div>
    }
</div>
