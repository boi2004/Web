@model IEnumerable<Demo.Models.Ring>
@*@model PagedList.PagedList<Demo.Models.Ring>*@
@using PagedList.Mvc
@{
    ViewBag.Title = "Gocnhinnguoidung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
</head>
<body>
    <div id="carouselExampleFade" class="carousel slide carousel-fade">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://cdn.pnj.io/images/promo/192/pnjfast-1972x640CTA.jpg" class="d-block w-100" alt="@Url.Action("LocQuaTang", "Ring")">
               
            </div>
            <div class="carousel-item">
                <img src="https://cdn.pnj.io/images/promo/192/T11_-_CT_BLACK_FRIDAY-1972x640CTA.jpg" class="d-block w-100" alt="Nhẫn">
            </div>
            <div class="carousel-item">
                <img src="https://cdn.pnj.io/images/promo/173/egift-t7-1972x640CTA__1_.jpg" class="d-block w-100" alt="Món quà ">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!--Slide-->
    <section>
        <div class="p-3">
            <div class="row w-100">
                @foreach (var item in Model)
                {
                    <div class="col-md-12 col-lg-4 mb-4 mb-lg-0" style="height: 20%; width: 25%">
                        <div class="card text-black">
                            <img src="@Url.Content(item.ImagePro)"
                                 class="card-img-top" alt="iPhone" />
                            <div class="card-body">
                                <div class="text-center mt-1">
                                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.Brand)</h4>
                                    <h6 class="text-primary mb-1 pb-3">@Html.DisplayFor(modelItem => item.Price)</h6>
                                </div>
                                <div class="d-flex flex-row">
                                    
                                    <a href="/ShoppingCart/AddToCart/@item.RingID" class="btn btn-primary flex-fill me-1">Mua</a>
                                    @*<a href="/Ring/Details?id=@item.RingID" class="btn btn-danger">Chi tiết</a>*@
                                    <a href="/Ring/Details/@item.RingID" class="btn btn-danger">Chi tiết</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    @*<div class="pagination-info">
            Trang@(Model.PageCount<Model.PageNumber ? 0 :Model.PageNumber) / @Model.PageCount
        </div>*@
    <!--<div class="pagination-container">-->
    <!-- Chữ "Trang" và phân trang -->
    <!--<div class="pagination-text">Trang: </div>
    <!--Html.PagedListPager(Model, page => Url.Action("Gocnhinnguoidung", new { page }))  Thêm a còng vào trước html để phân trang-->
    <!--</div>-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>

<style>
    /* Thiết kế gói bên ngoài danh sách sản phẩm */
    .product-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }
    /* Thiết kế mỗi mục sản phẩm */
    .product-item {
        width: calc(25% - 10px); /* 25% để hiển thị 4 sản phẩm trên hàng */
        margin-bottom: 20px;
        padding: 5px;
        border: 1px solid #ddd;
        margin: 0px 20px 20px;
    }

    /* Thiết kế thông tin sản phẩm */
    .product-detail {
        margin-bottom: 10px;
    }

    .product-label {
        font-weight: bold;
    }
    /* Thiết kế nút mua và liên kết chi tiết */
    .product-actions a {
        display: inline-block;
        margin-top: 12px;
        padding: 5px 10px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        text-align: center;
        border-radius: 5px;
    }

        .product-actions a:hover {
            background-color: #0056b3;
        }

    .btn-btn-fefault {
        margin-top: 12px;
        margin-right: 50px;
    }
    /* CSS để canh giữa và đặt kích thước cho thông tin trang và phân trang */
    .pagination-info {
        text-align: center; /* Canh giữa nội dung */
        font-size: 18px; /* Kích thước font */
        margin-top: 10px; /* Khoảng cách với phân trang */
        margin-bottom: 5px;
        display:inline-block;
    }

    .pagination-container {
        display: flex;
        justify-content: center; /* Canh giữa theo chiều ngang */
        margin-top: 20px; /* Khoảng cách với nội dung trang */
    }

    /* CSS cho phân trang */
    .pagination {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .pagination li {
            margin: 0 5px; /* Khoảng cách giữa các nút phân trang */
        }

        .pagination a {
            display: block;
            padding: 10px 15px;
            text-decoration: none;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
        }

            .pagination a:hover {
                background-color: #0056b3;
            }

        .pagination .disabled {
            color: #999;
            cursor: not-allowed;
        }

        .pagination .current {
            background-color: #0056b3;
            color: #fff;
        }
    .pagination-info {
        text-align: center;
        font-size: 18px;
        margin-top: 10px;
    }

    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center; /* Canh giữa theo chiều dọc */
        margin-top: 20px;
    }

    .pagination-text {
        margin-right: 10px; /* Khoảng cách giữa chữ "Trang" và phân trang */
        font-weight: bold; /* Đậm chữ */
    }
</style>
