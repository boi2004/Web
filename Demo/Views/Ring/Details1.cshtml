@model Demo.Models.Ring
@{
    ViewBag.Title = "Chi Tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .containerr {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .dl-horizontal {
        display: flex;
        flex-wrap: wrap;
    }

        .dl-horizontal dt {
            width: 30%;
            margin-right: 5%;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            font-weight: bold;
        }

        .dl-horizontal dd {
            width: 65%;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            margin-bottom: 10px;
        }

    .action-links {
        margin-top: 20px;
    }
</style>

<meta charset="utf-8" />
<div class="containerr">
    <h2>Chi Tiết</h2>

    <div>
        <h4>Thông Tin Sản Phẩm</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Brand)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Brand)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.JewelryType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.JewelryType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Collection)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Collection)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.GoldCarat)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GoldCarat)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.GemType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GemType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Gender)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Gender)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MaterialColor)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaterialColor)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ImagePro)
            </dt>

            <dd>
                <img src="@Url.Content(Model.ImagePro)" height="150" width="150" />
            </dd>
        </dl>
    </div>

    <div class="action-links">
        @Html.ActionLink("Quay Lại Danh Sách", "Gocnhinnguoidung", null, new { @class = "btn btn-secondary" })
    </div>
</div>
