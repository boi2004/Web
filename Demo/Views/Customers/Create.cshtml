@model Demo.Models.Customer

@{
    ViewBag.Title = "Tạo Mới Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .card {
        width: 400px;
        border: 1px solid #ced4da;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    .card-header {
        background-color: #007bff;
        color: #fff;
        text-align: center;
        padding: 10px;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .card-body {
        padding: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-back {
        margin-right: 10px;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Tạo Mới Tài Khoản</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.EditorFor(model => model.IDCus, new { htmlAttributes = new { @class = "form-control", placeholder = "ID Customer" } })
                    @Html.ValidationMessageFor(model => model.IDCus, "", new { @class = "text-danger" })

                    @Html.EditorFor(model => model.NameCus, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                    @Html.ValidationMessageFor(model => model.NameCus, "", new { @class = "text-danger" })

                    @Html.EditorFor(model => model.PhoneCus, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone" } })
                    @Html.ValidationMessageFor(model => model.PhoneCus, "", new { @class = "text-danger" })

                    @Html.EditorFor(model => model.EmailCus, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                    @Html.ValidationMessageFor(model => model.EmailCus, "", new { @class = "text-danger" })

                    @Html.EditorFor(model => model.PassCus, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", type = "password" } })
                    @Html.ValidationMessageFor(model => model.PassCus, "", new { @class = "text-danger" })

                    @Html.EditorFor(model => model.ConfirmPassCus, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirm Password", type = "password" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassCus, "", new { @class = "text-danger" })

                    @Html.EditorFor(model => model.DateOfBirthCus, new { htmlAttributes = new { @class = "form-control", placeholder = "Date of Birth" } })
                    @Html.ValidationMessageFor(model => model.DateOfBirthCus, "", new { @class = "text-danger" })

                    @Html.EditorFor(model => model.AddressCus, new { htmlAttributes = new { @class = "form-control", placeholder = "Address" } })
                    @Html.ValidationMessageFor(model => model.AddressCus, "", new { @class = "text-danger" })

                    @Html.EditorFor(model => model.CityCus, new { htmlAttributes = new { @class = "form-control", placeholder = "City" } })
                    @Html.ValidationMessageFor(model => model.CityCus, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        @Html.ActionLink("Quay Lại", "Index", null, new { @class = "btn btn-secondary btn-back" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
