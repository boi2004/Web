@model Demo.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .card {
        width: 400px;
        border: 1px solid #ced4da;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #007bff;
        color: #fff;
        text-align: center;
        padding: 10px;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .card-body {
        padding: 20px;
    }

    .dl-horizontal {
        font-size: 16px;
    }

    .btn-group {
        margin-top: 20px;
        text-align: center;
    }

    .btn {
        margin: 0 10px;
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Chi Tiết Danh Mục</h2>
        </div>
        <div class="card-body">
            <h3 class="text-center">Thông tin chi tiết về danh mục</h3>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.IDCate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.IDCate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NameCate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NameCate)
                </dd>
            </dl>
            <div class="text-center">
                <div class="btn-group">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Chỉnh sửa</a>
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>

        </div>
    </div>
</div>
